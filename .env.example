# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/realtime-messaging


# Redis connection URL
REDIS_URL=redis://localhost:6379

# RabbitMQ connection URL
RABBITMQ_URL=amqp://localhost:5672

# Secret key for JWT access tokens (use a strong, random string)
JWT_SECRET=your-super-secret-jwt-key-here
# Secret key for JWT refresh tokens (use a different strong, random string)
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here

# Token expiration times
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Port number for the server
PORT=3000

# Node environment (development/production/test)
NODE_ENV=development

# Logging level (error/warn/info/debug)
LOG_LEVEL=info

# Sentry DSN for error tracking (get from your Sentry project)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_RELEASE=realtime-messaging@1.0.0

